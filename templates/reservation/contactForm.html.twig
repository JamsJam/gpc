{% endblock %}


{% block body %}

{# Bar de progression #}
{# <div class="progress__container"> #}
    <twig:Progressbar />
{# </div> #}

    {# sub-title #}
    <turbo-frame id="sub-title">
        <h2>
            Information de contact
        </h2>
    </turbo-frame>


    {# formulaire #}
    <turbo-frame id="reservationForm">
        {{form_start(form)}}

            <div>
                <div class"field__container">
                    {{form_label(form.prenom)}}
                    {{form_widget(form.prenom)}}
                </div>
                <div class"field__container">
                    {{form_label(form.nom)}}
                    {{form_widget(form.nom)}}
                </div>
            </div>

            <div class"field__container">
                {{form_label(form.nationalite)}}
                {{form_widget(form.nationalite)}}
            </div>

            <div class"field__container">
                {{form_label(form.adresse1)}}
                {{form_widget(form.adresse1)}}
            </div>

            <div class"field__container">
                {{form_label(form.adresse2)}}
                {{form_widget(form.adresse2)}}
            </div>

            <div class"field__container">
                {{form_label(form.telephone)}}
                {{form_widget(form.telephone)}}
            </div>

            <div class="bouton_container">
                <a data-turbo="false" href="{{path('app_home')}}">Retour</a>
                <button>Suivant</button>
            </div>
        
        {{form_end(form)}}
    </turbo-frame>
{% endblock %}
